pipeline {
  agent any

  tools {
    maven 'maven'   // Name of Maven tool in Jenkins
    jdk 'jdk'       // Name of JDK tool in Jenkins
  }

  environment {
    WAR_NAME = 'maven_web_application.war'
    TOMCAT_WEBAPPS = '/opt/tomcat9/webapps'
  }

  stages {
    stage('Checkout Code') {
      steps {
        checkout scm
      }
    }

    stage('Build WAR') {
      steps {
        sh 'mvn -B clean package -DskipTests'
      }
    }

    stage('Deploy to Tomcat') {
      steps {
        script {
          def war = sh(script: "ls target/*.war | head -n 1", returnStdout: true).trim()
          if (!war) { error "WAR not found" }

          echo "Deploying ${war} to Tomcat..."
          sh "cp ${war} ${TOMCAT_WEBAPPS}/${WAR_NAME}"

          echo "Restarting Tomcat..."
          sh "sudo systemctl restart tomcat"
        }
      }
    }
  }

  post {
    success {
      echo '✅ Deployment successful!'
    }
    failure {
      echo '❌ Deployment failed!'
    }
  }
}
